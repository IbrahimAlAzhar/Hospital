<?xml version="1.0" encoding="utf-8" ?>
<odoo>
     <data noupdate="1">
        <record id="test_patient_form" model="ir.cron">
            <field name="name">Check Patient Status</field>
            <field name="model_id" ref="model_hospital_patient"/>
            <field name="type">ir.actions.server</field>
            <field name="state">code</field>
            <field name="code">model.test_cron_job()</field> <!--call the function inside the model(in patient.py file) -->
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field> <!--positive means the number of number call and negative means infinite number of number call -->
        </record>
    </data>
</odoo>