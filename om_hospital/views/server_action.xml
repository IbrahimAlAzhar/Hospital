<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <data>
        <record id="hospital_patient_action" model="ir.actions.server">
            <field name="name">Patients Server Action</field>
            <field name="model_id" ref="om_hospital.model_hospital_patient"/> <!--take the module name and model name -->
            <field name="state">code</field> <!--state is code because we create server action by using python code in patient.py file,function name is 'action_patients' -->
            <field name="code">action = model.action_patients()</field> <!--call the function name in patient.py file  -->
        </record>

        <menuitem id="hospital_patient_server_action_menu"
                  name="Server Action"
                  parent="hospital_root"
                  action="hospital_patient_action"
        /> <!--action is called by record id (upper) -->

    </data>
</odoo>

